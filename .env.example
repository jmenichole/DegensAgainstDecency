# Discord OAuth Configuration (OPTIONAL - app works without it using guest mode)
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
# For local development:
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback
# For production (Vercel or other hosting), use your actual domain:
# DISCORD_CALLBACK_URL=https://yourdomain.vercel.app/auth/discord/callback

# Session Configuration (REQUIRED)
# Generate a secure random string for production (use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your_super_secret_session_key_here_change_this_in_production

# Server Configuration
PORT=3000
NODE_ENV=development
# For production deployment, set NODE_ENV=production

# OpenAI API Key (OPTIONAL - for AI card generation, app has fallback content)
OPENAI_API_KEY=your_openai_api_key_here

# Card Generator URL (OPTIONAL - defaults to degenscardbot.vercel.app)
CARD_GENERATOR_URL=https://degenscardbot.vercel.app/api/generate

# Autonoma AI API Key (OPTIONAL - for Autonoma card generation service)
# Provides 100 free tests/month for card generation
# Get your key from Autonoma service
AUTONOMA_API_KEY=your_autonoma_api_key_here

# Vercel AI Gateway Configuration (OPTIONAL - for multi-provider AI support)
# Enable AI Gateway for automatic provider fallback and cost tracking
USE_AI_GATEWAY=false
AI_GATEWAY_URL=https://gateway.ai.cloudflare.com/v1

# AI Provider API Keys (for AI Gateway)
# Add keys for any providers you want to use
# OPENAI_API_KEY is already defined above
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_KEY=your_google_ai_key_here
XAI_API_KEY=your_xai_api_key_here

# AI Gateway Settings
AI_GATEWAY_DEFAULT_PROVIDER=openai
AI_GATEWAY_DEFAULT_MODEL=gpt-3.5-turbo
AI_GATEWAY_FALLBACK_ENABLED=true
AI_GATEWAY_COST_LIMIT_DAILY=10.00
AI_GATEWAY_COST_LIMIT_REQUEST=0.10
AI_GATEWAY_ENABLE_TRACKING=true

# Discord Bot Configuration (OPTIONAL - for Discord bot integration)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# TiltCheck Integration (OPTIONAL - for player behavior monitoring)
# Get API key from https://tiltcheck.it.com after subscribing
# For demo mode: set TILTCHECK_ENABLED=true, leave API_KEY and API_URL empty
TILTCHECK_ENABLED=false
TILTCHECK_API_KEY=your_tiltcheck_api_key_here
TILTCHECK_API_URL=your_tiltcheck_api_url_here

# JustTheTip Integration (OPTIONAL - for cryptocurrency tipping)
# Enable crypto tipping with Solana smart contracts
# For demo mode: set JUSTTHETIP_ENABLED=true, leave API_URL and BOT_TOKEN empty
JUSTTHETIP_ENABLED=false
JUSTTHETIP_API_URL=your_justthetip_api_url_here
JUSTTHETIP_BOT_TOKEN=your_justthetip_bot_token_here

# Vercel Deployment Notes:
# - Add all environment variables in Vercel Dashboard → Settings → Environment Variables
# - Set NODE_ENV=production in Vercel
# - Update DISCORD_CALLBACK_URL to your Vercel domain
# - Generate a new SESSION_SECRET for production using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"